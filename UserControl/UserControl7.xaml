<UserControl x:Class="WpfFramePasCore.UserControl.UserControl7"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfFramePasCore.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Content="Back" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Click="GoToP1" RenderTransformOrigin="0.224,0.42" Margin="10,0,0,410" Height="30"/>
        <StackPanel Margin="162,37,84,9.6">
            <Label Content="Search for a delivery:"></Label>
            <TextBox Height="18" TextWrapping="Wrap" 
                     x:Name = "name2Search"
                     TextChanged="textChangedEventHandler"
                     Margin="180,10,199.6,0"/>
            <DataGrid HorizontalAlignment="Left" Margin="50,10,0,20" IsReadOnly="true"
                  x:Name="dataGridCustomers" Width="435" SelectionUnit="FullRow"
                  ItemsSource="{Binding}" Height="306" SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                      MouseDoubleClick="dataGridCustomers_SelectionChanged"  />
        </StackPanel>
    </Grid>
</UserControl>
